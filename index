                    {index + 1 < createBotStep ? <Check size={20} /> : index + 1}
                  </div>
                  {index < steps.length - 1 && (
                    <div className={`w-24 h-1 ${
                      index + 1 < createBotStep ? 'bg-indigo-600' : 'bg-gray-200'
                    }`} />
                  )}
                </div>
              ))}
