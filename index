                <div className="mt-8 flex justify-end">
                  <button 
                    onClick={() => setCreateBotStep(2)}
                    className="bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 transition-colors"
                    disabled={!selectedTemplate}
                  >
                    –î–∞–ª–µ–µ ‚Üí
                  </button>
                </div>
              </div>
