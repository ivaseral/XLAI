  const CreateBot = () => {
    const steps = ['–í—ã–±–æ—Ä —Ç–∏–ø–∞', '–ó–∞–≥—Ä—É–∑–∫–∞ –∫–æ–Ω—Ç–µ–Ω—Ç–∞', '–ù–∞—Å—Ç—Ä–æ–π–∫–∞ –ª–∏—á–Ω–æ—Å—Ç–∏', '–í—ã–±–æ—Ä –º–æ–¥–µ–ª–∏', '–¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ'];
    
    return (
