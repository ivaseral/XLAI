            {createBotStep === 1 && (
              <div>
                <h2 className="text-2xl font-bold text-gray-900 mb-2">–í—ã–±–µ—Ä–∏—Ç–µ —Ç–∏–ø –±–æ—Ç–∞</h2>
                <p className="text-gray-600 mb-6">–í—ã–±–µ—Ä–∏—Ç–µ –≥–æ—Ç–æ–≤—ã–π —à–∞–±–ª–æ–Ω –∏–ª–∏ —Å–æ–∑–¥–∞–π—Ç–µ –±–æ—Ç–∞ —Å –Ω—É–ª—è</p>
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                  {botTemplates.map(template => (
                    <button
                      key={template.id}
                      onClick={() => setSelectedTemplate(template.id)}
                      className={`p-6 rounded-xl border-2 transition-all ${
